<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_container"
    style="@style/SliderRootLayout"
    android:background="@drawable/back_slide5"
    tools:ignore="SpUsage">

    <androidx.appcompat.widget.AppCompatTextView
        style="@style/SliderTitle"
        android:text="파트너의 알림 받기" />

    <com.airbnb.lottie.LottieAnimationView
        style="@style/SliderImage"
        app:lottie_rawRes="@raw/slider_chat_5" />

    <androidx.appcompat.widget.AppCompatTextView
        style="@style/SliderDescription"
        android:text="중요한 일정 메세지 알림을 확인하세요!" />
</LinearLayout>
